{
  "name": "Brave Search",
  "description": "Keep your search private.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "./16x16.png",
    "32": "./32x32.png",
    "48": "./48x48.png",
    "128": "./128x128.png"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "options_page": "./options.html",
  "action": {
    "default_popup": "./popup.html",
    "default_icons": {
      "16": "./16x16.png",
      "32": "./32x32.png",
      "48": "./48x48.png",
      "128": "./128x128.png"
    }
  },
  "permissions": ["contextMenus"]
}
